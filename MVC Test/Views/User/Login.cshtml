@{
    ViewBag.Title = "Login";
}

<div class=" col-md-6 col-md-offset-3 ">
    <div class="login-form header-anim">
        <div class="close"> </div>
        <div class="head-info">
            <label class="lbl-1"> </label>
            <label class="lbl-2"> </label>
            <label class="lbl-3"> </label>
        </div>
        <div class="clear"> </div>
        <div class="avtar">
            <img src="~/Content/images/avtar.png" />
        </div>
        <form>
            <input type="text" class="username" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}">
            <div class="key">
                <input type="password" class="passwordtxt" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Password';}">
            </div>
        </form>
        <div class="signin">
            <input type="submit" class="submitBtn" value="Login">
        </div>
    </div>
</div>


