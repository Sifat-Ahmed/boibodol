@{
    ViewBag.Title = "Home";
}

@section Banner{
    @Html.Partial("bannerLarge")
}

<div class="col-md-9 technology-left">
    <div class="tech-no">
        <!-- technology-top -->
        @foreach(var post in Model)
        {
            <div class="tc-ch wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                <div class="col-md-3 thumbnail">
                    <img src="~/Content/images/cover.jpg"/>
                </div>
                <div class="col-md-6">
                    <h3><a href="@Url.Action("SingleReview" , "Post" , new {id = post.Id})">@post.Title</a></h3>
                    <h6>BY <a href="#">@post.UserId </a>@post.Date</h6>

                </div>
                <div class="clearfix"></div>
                <p>@post.Details</p>
                <div class="bht1">
                    @Html.RouteLink("Continue Reading" , "SingleReview" , new {id = post.Id})
                </div>
                <div class="soci">
                    <ul>
                        <li class="hvr-rectangle-out"><a class="fb" href="#"></a></li>
                        <li class="hvr-rectangle-out"><a class="twit" href="#"></a></li>
                        <li class="hvr-rectangle-out"><a class="goog" href="#"></a></li>
                        <li class="hvr-rectangle-out"><a class="pin" href="#"></a></li>
                        <li class="hvr-rectangle-out"><a class="drib" href="#"></a></li>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
            <!-- technology-top -->
            <!-- technology-top -->
            <div class="w3ls">
                <div class="clearfix"></div>
            </div>
        }

    </div >
    <!--Page Number Buttons-->
    <center>
        <div class="pagepos">
            <nav>
                <ul class="pagination pagination-lg">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </center>
</div>


@section sideBar
{
    @Html.Partial("sideBar")
}
